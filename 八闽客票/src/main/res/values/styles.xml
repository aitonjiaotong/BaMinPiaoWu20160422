<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>
    <style name="title_bar_text_style">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="AnimFromButtomToTop">
        <item name="android:windowEnterAnimation">@anim/push_up_in</item>
        <item name="android:windowExitAnimation">@anim/push_down_out</item>
    </style>
    <style name="AnimFromSmallToBig">
        <item name="android:windowEnterAnimation">@anim/magnify_fade_in</item>
        <item name="android:windowExitAnimation">@anim/big_to_small_fade_out</item>
    </style>
</resources>
