                    <TextView
                        android:textSize="20dp"
                        android:id="@+id/textView_startPlace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginStart="19dp"
                        android:text="null"
                        android:textColor="@color/title_bar"/>

                    <TextView
                        android:lines="1"
                        android:textSize="20dp"
                        android:id="@+id/textView_endPlace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/imageView12"
                        android:layout_toRightOf="@+id/imageView12"
                        android:text="null"
                        android:textColor="@color/title_bar"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:textSize="@dimen/normalTextSize"
                        android:textColor="@color/tabs_select"
                        android:id="@+id/textView_startTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginStart="21dp"
                        android:text="出发日期：null"/>
                    <TextView
                        android:gravity="center"
                        android:textSize="@dimen/normalTextSize"
                        android:id="@+id/textView_ticketState"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/title_bar"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:text="未知"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginEnd="31dp"/>
                </RelativeLayout>

                <RelativeLayout
