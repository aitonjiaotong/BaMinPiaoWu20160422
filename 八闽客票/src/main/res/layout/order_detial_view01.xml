<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <ImageView
                android:id="@+id/tiaoxingma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:textSize="@dimen/normalTextSize"
                android:id="@+id/textView_detialOrderTicketGetNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="取票号:16000086835163770"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="@dimen/normalTextSize"
            android:textColor="@color/red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提示："
            android:id="@+id/textView51"/>

        <TextView
            android:textSize="@dimen/normalTextSize"
            android:textColor="@color/red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1、凭身份证或手机条形码前往乘车站检票口检票上车。"
            android:id="@+id/textView53"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="@dimen/normalTextSize"
            android:visibility="invisible"
            android:textColor="@color/red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提示："
            android:id="@+id/textView54"/>

        <TextView
            android:textSize="@dimen/normalTextSize"
            android:textColor="@color/red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2、凭身份证或取票号提前30分钟前往乘车站窗口、自助机取票乘车。"
            android:id="@+id/textView55"/>
    </LinearLayout>
    <!--2、凭身份证或手机条形码前往乘车站检票口检票上车。-->
    <!--1、凭身份证或取票号提前30分钟前往乘车站窗口、自助机取票乘车。-->
</LinearLayout>