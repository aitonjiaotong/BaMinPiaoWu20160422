<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@mipmap/reward"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/im_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:text="八闽红包"
                android:textColor="#ebce3f"
                android:textSize="40dp"/>

            <TextView
                android:textSize="@dimen/normalTextSize"
                android:id="@+id/tv_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/im_reward"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="恭喜您获得八闽长途客运送您的红包"
                android:textColor="#ffffff"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_tip"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/im_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/reward_money"/>

                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="+10"
                    android:textColor="#f4e987"
                    android:textSize="40dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_ikow"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal|bottom"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:text="我知道了"
                android:textColor="#ff3d3d3d"
                android:textSize="15dp"/>

            <TextView
                android:textSize="@dimen/normalTextSize"
                android:id="@+id/tv_rule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="现金红包使用规则"
                android:textColor="#FFFFFF"/>

        </LinearLayout>
    </FrameLayout>

</RelativeLayout>