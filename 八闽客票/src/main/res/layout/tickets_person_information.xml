<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_for_add_fetcher"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:src="@mipmap/ic_ticket_count"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="12dp"
            android:textSize="16dp"
            android:paddingBottom="12dp"
            android:text="乘客"/>
        <TextView
            android:textSize="@dimen/normalTextSize"
            android:gravity="center"
            android:padding="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/passager_Count"/>
        <ImageView
            android:id="@+id/add_passager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:src="@mipmap/ic_ticket_count_add_normal"/>
    </LinearLayout>

    <com.aiton.administrator.shane_library.shane.widget.ListView4ScrollView
        android:divider="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/passager_list"/>

    <LinearLayout
        android:background="@color/line_gray"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="1dp">
    </LinearLayout>


</LinearLayout>