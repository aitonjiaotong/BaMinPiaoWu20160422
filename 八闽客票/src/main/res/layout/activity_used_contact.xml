<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.aiton.bamin.changtukepiao.Bchangtukepiao.activity.UsedContact">

    <RelativeLayout
        android:background="@color/title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/relativeLayout5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:src="@mipmap/ic_header_back"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            style="@style/title_bar_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="常用乘客"
            android:id="@+id/textView5"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:textSize="@dimen/normalTextSize"
            android:gravity="center"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="完成"
            android:visibility="gone"
            android:textColor="@color/white"
            android:id="@+id/add_passager"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <ListView
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/used_contact_listview"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/textView50"
        android:layout_below="@+id/textView_add_passager"/>

    <TextView
        android:textSize="@dimen/normalTextSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="长按删除联系人"
        android:id="@+id/textView50"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:background="@color/white"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="添加常用乘客"
        android:textColor="@color/title_bar_light"
        android:id="@+id/textView_add_passager"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/relativeLayout5"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
